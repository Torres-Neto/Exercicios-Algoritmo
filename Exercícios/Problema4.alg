algoritmo "Sucessor e Antecessor"
var
   num1, numA, numS: real
inicio
      Escreva ("Digite um número para verificar seu antecessor e seu sucessor: ")
      Leia (num1)
      numA <- (num1-1)
      numS <- (num1+1)
      Escreval ("O ANTECESSOR de: ", num1," é:", numA)
      Escreval ("O SUCESSOR de: ", num1," é:", numS)
fimalgoritmo
